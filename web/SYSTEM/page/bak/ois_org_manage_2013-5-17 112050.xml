    <SCRIPT><![CDATA[function checkOrgCode(){  
   var id=$("#id").val();
   var orgCode=$("#orgCode").val();
   $.ajax({
      type:"post",
      url:"fun.getSession(PATH)/jsp/support/checkOrgCode.action",
      contentType:"application/x-www-form-urlencoded; charset=utf-8",
      data:{id:id,orgCode:orgCode},
